<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSearchActivity">

    <ProgressBar
        android:id="@+id/progress3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:id="@+id/imageScroll"
                android:layout_height="300dp"
                android:layout_width="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_toEndOf="@id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_toEndOf="@id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/hName"
                android:layout_below="@+id/imageScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#813DD4"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/hAddress"
                android:layout_below="@+id/hName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#813DD4"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/hDescription"
                android:layout_below="@+id/hAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525253"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentStart="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_below="@id/hDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardElevation="3dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start">
                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/call"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="13dp"/>

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/call"
                        android:src="@drawable/email"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="16dp"/>
                    <TextView
                        android:id="@+id/hCall"
                        android:layout_toEndOf="@id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/hEmail"
                        android:layout_below="@+id/hCall"
                        android:layout_toEndOf="@id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp"/>
                    <ImageButton
                        android:id="@+id/toCall"
                        android:layout_toEndOf="@+id/hCall"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/copy"
                        android:backgroundTint="@color/white"/>
                    <ImageButton
                        android:id="@+id/toEmail"
                        android:layout_below="@+id/toCall"
                        android:layout_toEndOf="@+id/hEmail"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/copy"
                        android:backgroundTint="@color/white"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_below="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_button"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/callButton"/>
    </RelativeLayout>

</RelativeLayout>